	"description": "Create a promise that can be canceled. This is a fork of sindresorhus/p-cancelable",
	"license": "MIT",
	"repository": "antonbobrov/p-cancelable",
	"author": {
		"name": "Anton Bobrov",
		"email": "anton.bobrov@hotmail.com"
	},
	"type": "module",
	"exports": "./index.js",
	"engines": {
		"node": ">=14.16"
	},
	"scripts": {
		"test": "xo && ava && tsd",
